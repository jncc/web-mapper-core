{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/jncc-web-api.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Deploy to Test Server",
            "type": "shell",
            "command": ".vscode/deploy.sh",
            "windows": {
                "command": ".vscode\\\\deploy.sh"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Deploy from Test to Live Server",
            "type": "shell",
            "command": ".vscode/deploy_to_live.sh",
            "windows": {
                "command": ".vscode\\\\deploy_to_live.sh"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }

    ]
}