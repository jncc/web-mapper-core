@page
@model jncc_web_api.Pages.BaseLayers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BaseLayer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseLayer[0].Attribution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseLayer[0].AttributionUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseLayer[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseLayer[0].LayerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BaseLayer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attribution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttributionUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BaseLayerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BaseLayerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BaseLayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
