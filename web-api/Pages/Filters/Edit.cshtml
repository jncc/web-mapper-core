@model jncc_web_api.Pages.Filters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Filter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Filter.FilterId" />
            <div class="form-group">
                <label asp-for="Filter.Name" class="control-label"></label>
                <input asp-for="Filter.Name" class="form-control" />
                <span asp-validation-for="Filter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filter.Description" class="control-label"></label>
                <input asp-for="Filter.Description" class="form-control" />
                <span asp-validation-for="Filter.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filter.MetadataUrl" class="control-label"></label>
                <input asp-for="Filter.MetadataUrl" class="form-control" />
                <span asp-validation-for="Filter.MetadataUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filter.Type" class="control-label"></label>
                <input asp-for="Filter.Type" class="form-control" />
                <span asp-validation-for="Filter.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filter.Attribute" class="control-label"></label>
                <input asp-for="Filter.Attribute" class="form-control" />
                <span asp-validation-for="Filter.Attribute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filter.LookupCategory" class="control-label"></label>
                <input asp-for="Filter.LookupCategory" class="form-control" />
                <span asp-validation-for="Filter.LookupCategory" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Filter.IsComplex" /> @Html.DisplayNameFor(model => model.Filter.IsComplex)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Filter.Order" class="control-label"></label>
                <input asp-for="Filter.Order" class="form-control" />
                <span asp-validation-for="Filter.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filter.LayerId" class="control-label"></label>
                <select asp-for="Filter.LayerId" class="form-control" asp-items="ViewBag.LayerId"></select>
                <span asp-validation-for="Filter.LayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
