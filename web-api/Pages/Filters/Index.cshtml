@page
@model jncc_web_api.Pages.Filters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].LookupSrc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Filter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LookupSrc)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FilterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FilterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FilterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
