@page
@model jncc_web_api.Pages.Filters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].MetadataUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Attribute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].LookupCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].IsComplex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filter[0].Layer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Filter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetadataUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attribute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LookupCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Layer.LayerId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FilterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FilterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FilterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
