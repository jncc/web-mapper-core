@model jncc_web_api.Pages.Gazetteers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gazetteer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gazetteer[0].Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gazetteer[0].Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gazetteer[0].Zoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Gazetteer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zoom)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GazetteerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GazetteerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GazetteerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
