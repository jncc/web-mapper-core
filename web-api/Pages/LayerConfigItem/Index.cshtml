@page
@model JNCCMapConfigEditor.Pages.LayerConfigItem.IndexModel

@{
    ViewData["Title"] = "Layer Configuration Data";
}

<h1>Layer Configuration Data</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LayerConfigItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LayerConfigItem[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LayerConfigItem[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LayerConfigItem[0].UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LayerConfigItem[0].LayerItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LayerConfigItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerItem.LayerId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LayerConfigId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LayerConfigId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LayerConfigId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
