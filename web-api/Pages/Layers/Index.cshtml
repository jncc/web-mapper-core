@page
@model jncc_web_api.Pages.Layers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Src)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Visible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].Opacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].FilterDefinition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Layer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Src)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilterDefinition)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LayerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LayerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
