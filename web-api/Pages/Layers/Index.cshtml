        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Layer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetadataDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetadataUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DownloadURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubLayerGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LegendLayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerVisible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerOpacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerCentreLon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerCentreLat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerZoom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayerGroup.LayerGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LayerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LayerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
