            <th>
                @Html.DisplayNameFor(model => model.Layer[0].LayerOpacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].LayerCentreLon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].LayerCentreLat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layer[0].LayerZoom)
