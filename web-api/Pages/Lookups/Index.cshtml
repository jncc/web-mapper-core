@model jncc_web_api.Pages.Lookups.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lookup[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lookup[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lookup[0].LookupCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Lookup) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LookupCategory)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LookupId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LookupId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LookupId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
